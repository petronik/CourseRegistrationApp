@model CourseRegistrationApp.Models.Students

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="S_FirstName" class="control-label"></label>
                <input asp-for="S_FirstName" class="form-control" />
                <span asp-validation-for="S_FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="S_LastName" class="control-label"></label>
                <input asp-for="S_LastName" class="form-control" />
                <span asp-validation-for="S_LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="S_Email" class="control-label"></label>
                <input asp-for="S_Email" class="form-control" />
                <span asp-validation-for="S_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="S_PhoneNumber" class="control-label"></label>
                <input asp-for="S_PhoneNumber" class="form-control" />
                <span asp-validation-for="S_PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C_CourseId" class="control-label"></label>
                <select asp-for="C_CourseId" class="form-control" 
                       asp-items="ViewBag.Courses"></select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
